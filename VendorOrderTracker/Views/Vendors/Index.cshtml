@{
    Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h1>My Vendors</h1>
<hr>

@if (@Model.Count == 0)
{
    <p>No vendors yet!</p>
}

<p><a href="/vendors/new">★ New Vendor</a></p>

<ul>
    @foreach (Vendor vendor in Model)
    {
        <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
    }
</ul>

<hr>
<a href="/">← Home</a>
